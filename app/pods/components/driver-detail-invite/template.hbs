{{#liquid-if driver.hasInvite class="driver-invite"}}

  {{#if driver.isUndeliverable}}

    <div class="invited undelivered">
      <p class="status">Undeliverable</p>
    </div>

  {{else if driver.isInviteCurrent}}

    <div class="invited delivered">
      <p class="status">Invite Sent</p>
      <p class="expiration">Expires in {{moment-from-now driver.inviteExpiresAt}}</p>
    </div>

  {{/if}}

{{else if driver.isSaving}}

  <i class="icon-spin3 animate-spin"></i>

{{else}}

  <div class="uninvited">&mdash;</div>

{{/liquid-if}}
