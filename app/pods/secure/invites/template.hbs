{{#header-page}}
  {{#block-slot 'title'}}<em>DriverDash</em> Access for Active Drivers{{/block-slot}}
  {{#block-slot 'subtitle'}}Drivers must have a unique mobile phone number to be invited to DriverDash.{{/block-slot}}
{{/header-page}}


<div class="page-invites">

  {{#zf-accordion data-multi-expand="true" data-allow-all-closed="true"}}
    <li class="accordion-item is-active" data-accordion-item>
      <a class="accordion-title">Send Invites</a>
      <div class="accordion-content" data-tab-content>

        <table>
          <thead>
            <tr>
              <th>Last Name</th>
              <th>First Name</th>
              <th>Driver ID</th>
              <th>Mobile Phone #</th>
              <th>DriverDash Access</th>
              <th class="actions">{{input type="checkbox"}}</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Bhatia</td>
              <td>Sonu</td>
              <td>012394</td>
              <td>
                <div class="phone">
                  <a href="#"><i class="icon-plus-circled"></i>add</a>
                </div>
              </td>
              <td><div class="uninvited">&mdash;</div></td>
              <td>{{input type="checkbox"}}</td>
            </tr>
            <tr>
              <td>Bowie</td>
              <td>David</td>
              <td>343023</td>
              <td><div class="phone">207-123-4567</div></td>
              <td>
                <div class="invited">
                  <p class="status">Invite Sent</p>
                  <p class="expiration">Expires in 5 days</p>
                </div>
              </td>
              <td>{{input type="checkbox"}}</td>
            </tr>
            <tr>
              <td>Dilios</td>
              <td>Chris</td>
              <td>343056</td>
              <td><div class="phone">{{input placeholder="207-555-1212"}}</div></td>
              <td><div class="uninvited">&mdash;</div></td>
              <td>{{input type="checkbox"}}</td>
            </tr>
          </tbody>
        </table>

        <footer class="accordion-item-footer">
          <ul class="pagination" role="navigation" aria-label="Pagination">
            <li class="disabled">Previous</li>
            <li class="current">1</li>
            <li><a href="#0" aria-label="Page 2">2</a></li>
            <li><a href="#0" aria-label="Next page">Next</a></li>
          </ul>

          <button class="button">Invite</button>
        </footer>

      </div>
    </li>

    <li class="accordion-item is-active" data-accordion-item>
      <a class="accordion-title">Manage Access</a>
      <div class="accordion-content" data-tab-content>
        <div class="no-content">You currently have no drivers to manage, you can invite drivers from the list above.</div>
      </div>
    </li>
  {{/zf-accordion}}

</div>
